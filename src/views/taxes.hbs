<!-- Page for calculate Taxes -->
<div class="container text-center">
  <h1 class="my-5">Calculo de Interes Simple</h1>
  

  <form action="/" method="POST">
    <div class="mb-3">
      <label for="capital" class="form-label">Capital: </label>
      <input type="number" required="true" name="capital" placeholder="Capital" value="{{capital}}">
    </div>
    <div class="mb-3">
      <label for="tax" class="form-label">Taxes:  </label>
      <input type="number" required="true" name="tax" placeholder="Tax" value="{{tax}}">
    </div>

    <div class="mb-3">
      <label for="years" class="form-label">Years: </label>
      <input type="number" required="true" name="years" placeholder="Years" value="{{years}}">
    </div>


    <button type="submit" class="btn btn-primary">Calculate the Simple Tax</button>
    {{#if simpleTaxes}}
    <div class="mt-3 fs-4">
      <p><span class="fw-bold">Simple Tax: {{simpleTaxes}} </span></p>
    </div>
    {{/if}}


  </form>
</div>